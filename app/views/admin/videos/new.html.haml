%section.admin_add_video
  .container
    .row
      .span10.offset1
        = bootstrap_form_for admin_videos_path, html: {class: "form-horizontal"}  do |f|
          %ul.nav.nav-tabs
            %li
              %a(href="/ui/admin_views_payments") Recent Payments
            %li.active
              %a(href="") Add a New Video
          %fieldset
            .control-group
              .controls
                = f.text_field :title, label: "Title"
            .control-group
              %label.control-label Category
              .controls
                = f.collection_select :category_ids, Category.all, :id, :name, {}, { :multiple => true }
            .control-group
              %label.control-label Description
              .controls
                %textarea.span6(rows="8")
            .control-group
              %label.control-label Large Cover
              .controls
                %span.btn.btn-file
                  %input(type="file")
            .control-group
              %label.control-label Small Cover
              .controls
                %span.btn.btn-file
                  %input(type="file")

          %fieldset.actions.control-group
            .controls
              %input(type="submit" value="Add Video" class="btn")