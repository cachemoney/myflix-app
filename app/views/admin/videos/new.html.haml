%section.admin_add_video
  .container
    .row
      .span10.offset1
        = bootstrap_form_for [:admin, @video], html: {class: "form-horizontal", multipart: true}  do |f|
          %ul.nav.nav-tabs
            %li
              %a(href="/ui/admin_views_payments") Recent Payments
            %li.active
              %a(href="") Add a New Video
          %fieldset
            .control-group
              .controls
                = f.text_field :title, label: "Title"
            .control-group
  
              .controls
                = f.select "category_id", Category.all.collect {|x| [x.title, x.id]}, {prompt: 'Select Category'}
            .control-group

              .controls
                = f.text_area :description, size: "30x8"
            .control-group
              %label.control-label Large Cover
              .controls
                %span.btn.btn-file
                  = f.file_field :large_cover_url
            .control-group
              %label.control-label Small Cover
              .controls
                %span.btn.btn-file
                  = f.file_field :small_cover_url
            .control-group
              .controls
                = f.text_field :video_url, label: "Video URL"
          %fieldset.actions.control-group
            .controls
              %input(type="submit" value="Add Video" class="btn")